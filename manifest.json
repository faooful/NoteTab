{
  "manifest_version": 3,
  "name": "Note Cards",
  "version": "2.0.0",
  "description": "Transform your notes into organized, color-coded cards with smart syntax recognition",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["fonts/*"],
    "matches": ["<all_urls>"]
  }],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
